<VideoConverter>
  <name>Windows Media Video Converter</name>
  <version>1.0</version>
  <decoder>ffmpeg-wmv_audio-in</decoder>

  <format>
    <name>Windows Media Video</name>
    <extension>wmv</extension>
    <tag id="wma-tag" mode="other">WMA Metadata</tag>
  </format>

  <external>
    <command>ffmpeg</command>
    <arguments>-i %INFILE -f asf -vcodec wmv2 -sameq -acodec wmav2 -ab 128000 %OUTFILE</arguments>
  </external>
</VideoConverter>
