########## BoCA commands makefile ##########

include $(BOCA_PATH)/Makefile-options

CC = gcc
CCOPTS = -g0 -Wall -Os -ffast-math -DBOCA_COMPONENT_BUILD $(DEFINE) -I$(BOCA_PATH)/include
LD = gcc
LDOPTS = -L$(BOCA_PATH)/$(LIBDIR) -lsmooth -lboca -lstdc++ $(LIBS)

ifneq ($(EXCEPTION),True)
	CCOPTS += -fno-exceptions
endif

ifeq ($(BUILD_X64),True)
	CCOPTS += -march=nocona
else
	CCOPTS += -march=i586
endif

ifeq ($(BUILD_WIN32),True)
	DLLEXT = .dll

	LDOPTS += -Xlinker --dynamicbase -Xlinker --nxcompat -Xlinker --enable-auto-import
else ifeq ($(BUILD_OSX),True)
	DLLEXT = .dylib

	CCOPTS += -I/opt/local/include
	LDOPTS += -L/opt/local/lib
else
	DLLEXT = .so

	CCOPTS += -I/usr/local/include
	LDOPTS += -L/usr/local/lib
endif

all : $(BOCA_PATH)/$(BINDIR)/boca_$(TYPE)_$(TARGET).$(VERSION)$(DLLEXT)
	$(ALLCMD1)
	$(ALLCMD2)

$(BOCA_PATH)/$(BINDIR)/boca_$(TYPE)_$(TARGET).$(VERSION)$(DLLEXT) : $(OBJECTS)
	$(LD) --shared -o $@ $(OBJECTS) $(LDOPTS)
ifneq ($(BUILD_OSX),True)
	strip --strip-all $@
endif

clean :
	rm -f $(BOCA_PATH)/$(BINDIR)/boca_$(TYPE)_$(TARGET).$(VERSION)$(DLLEXT) $(OBJECTS)
	$(CLEANCMD1)
	$(CLEANCMD2)

.c.o:
	$(CC) $(CCOPTS) -c $< -o $@

.cpp.o:
	$(CC) $(CCOPTS) -c $< -o $@
