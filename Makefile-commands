########## BoCA commands makefile ##########

include $(BOCA_PATH)/Makefile-options

CC     = gcc
CCOPTS = -g0 -Wall -Os -ffast-math -DBOCA_COMPONENT_BUILD $(DEFINE) -I$(BOCA_PATH)/include
LD     = gcc
LDOPTS = -L$(BOCA_PATH)/$(LIBDIR) -lsmooth -lboca -lstdc++ $(LIBS)

ifneq ($(EXCEPTION),True)
	CCOPTS += -fno-exceptions
endif

ifeq ($(BUILD_X64),True)
	CCOPTS += -m64 -march=nocona
	LDOPTS += -m64
else
	CCOPTS += -m32 -march=pentium4
	LDOPTS += -m32
endif

ifneq ($(BUILD_WIN32),True)
ifneq ($(BUILD_SOLARIS),True)
ifneq ($(BUILD_QNX),True)
ifneq ($(BUILD_HAIKU),True)
	CCOPTS += -pthread
endif
endif
endif
endif

ifeq ($(BUILD_WIN32),True)
	DLLEXT = .dll

	LDOPTS += -Xlinker --dynamicbase -Xlinker --nxcompat -Xlinker --enable-auto-import
else ifeq ($(BUILD_OSX),True)
	DLLEXT = .dylib

	LDOPTS += -Wl,-rpath,.
else
	DLLEXT = .so

	ifeq ($(BUILD_SOLARIS),True)
		CCOPTS += -fPIC
		LDOPTS += -Wl,-rpath,.
	else ifeq ($(BUILD_LINUX),True)
		ifeq ($(BUILD_X64),True)
			CCOPTS += -fPIC
		endif
	else ifeq ($(BUILD_NETBSD),True)
		CCOPTS += -I/usr/pkg/include
		LDOPTS += -Wl,-rpath,/usr/pkg/lib -L/usr/pkg/lib -Wl,-rpath,.
	else ifeq ($(BUILD_HAIKU),True)
		LDOPTS += -L/boot/common/lib -Wl,-rpath,.
	else
		CCOPTS += -I/usr/local/include
		LDOPTS += -L/usr/local/lib -Wl,-rpath,.
	endif
endif

all : $(BOCA_PATH)/$(BINDIR)/boca_$(TYPE)_$(TARGET).$(VERSION)$(DLLEXT)
	$(ALLCMD1)
	$(ALLCMD2)

$(BOCA_PATH)/$(BINDIR)/boca_$(TYPE)_$(TARGET).$(VERSION)$(DLLEXT) : $(OBJECTS)
	$(LD) --shared -o $@ $(OBJECTS) $(LDOPTS)
ifneq ($(BUILD_OSX),True)
ifneq ($(BUILD_SOLARIS),True)
	strip --strip-all $@
else
	strip $@
endif
endif

clean :
	rm -f $(BOCA_PATH)/$(BINDIR)/boca_$(TYPE)_$(TARGET).$(VERSION)$(DLLEXT) $(OBJECTS)
	$(CLEANCMD1)
	$(CLEANCMD2)

.c.o:
	$(CC) $(CCOPTS) -c $< -o $@

.cpp.o:
	$(CC) $(CCOPTS) -c $< -o $@
