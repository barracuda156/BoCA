<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "http://www.freac.org/boca/component.dtd">
<component>
  <name>WavPack Lossless Decompressor</name>
  <version>1.0</version>
  <id>wv-in</id>
  <type>decoder</type>
  <format>
    <name>WavPack Files</name>
    <extension>wv</extension>
    <tag id="apev2-tag" mode="append">APEv2</tag>
  </format>
  <external>
    <command ignoreExitCode="true">wvunpack</command>
    <arguments>%OPTIONS %INFILE -o -</arguments>
    <mode>stdio</mode>
    <outformat>wave</outformat>
  </external>
</component>
