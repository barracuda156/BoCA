<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "http://www.bonkenc.org/boca/component.dtd">
<component>
  <name>RealAudio Decoder</name>
  <version>1.0</version>
  <id>ffmpeg-realaudio-in</id>
  <type>decoder</type>
  <format>
    <name>RealAudio Files</name>
    <extension>ra</extension>
  </format>
  <external>
    <command>codecs/cmdline/ffmpeg.exe</command>
    <arguments>-i %INFILE %OPTIONS -f wav -</arguments>
    <mode>stdio</mode>
    <outformat>wave</outformat>
  </external>
</component>
