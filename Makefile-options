########## BoCA options makefile ##########

SMOOTHVER = 0.8.71

UNAME = $(shell uname)
MACHINE = $(shell gcc -dumpmachine)

ifneq ($(findstring x86_64,$(MACHINE)),)
	BUILD_X86_64 = True
else
	BUILD_X86 = True
endif

ifneq ($(findstring MINGW,$(UNAME)),)
#	Set executable and shared object extensions
	EXECUTABLE = .exe
	SHARED = .dll

#	Build on Win32
	BUILD_WIN32 = True
else
#	Set executable and shared object extensions
	EXECUTABLE = 
	SHARED = .so

	BUILD_UNIX = True

ifeq ($(UNAME),Linux)
	BUILD_LINUX = True
else ifeq ($(UNAME),FreeBSD)
	BUILD_FREEBSD = True
else ifeq ($(UNAME),OpenBSD)
	BUILD_OPENBSD = True
else ifeq ($(UNAME),NetBSD)
	BUILD_NETBSD = True
else ifeq ($(UNAME),SunOS)
	BUILD_SOLARIS = True
else ifeq ($(UNAME),Haiku)
	BUILD_HAIKU = True
else ifeq ($(UNAME),QNX)
	BUILD_QNX = True
else ifeq ($(UNAME),Darwin)
	SHARED = .dylib

	BUILD_OSX = True

	BUILD_X86 = True
	BUILD_X86_64 = True
endif
endif

ifeq ($(PREFIX),)
	PREFIX = /usr/local
	LIB    = lib

ifeq ($(BUILD_X86_64),True)
ifneq ($(BUILD_OSX),True)
	LIB    = lib64
endif
endif

ifeq ($(BUILD_HAIKU),True)
	PREFIX = /boot/common
endif
endif
