<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "http://www.bonkenc.org/boca/component.dtd">
<component>
  <name>ATRAC-3 Decoder</name>
  <version>1.0</version>
  <id>ffmpeg-atrac3-in</id>
  <type>decoder</type>
  <format>
    <name>ATRAC-3 Files</name>
    <extension>aa3</extension>
    <extension>wav</extension>
  </format>
  <format>
    <name>OpenMG Audio Files</name>
    <extension>oma</extension>
    <extension>omg</extension>
  </format>
  <external>
    <command>codecs/cmdline/ffmpeg.exe</command>
    <arguments>-i %INFILE %OPTIONS -f wav %OUTFILE</arguments>
    <mode>file</mode>
    <outformat>wave</outformat>
  </external>
</component>
