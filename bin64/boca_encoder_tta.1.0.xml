<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "http://www.bonkenc.org/boca/component.dtd">
<component>
  <name>TTA Lossless Audio Encoder</name>
  <version>1.0</version>
  <id>tta-out</id>
  <type>encoder</type>
  <format>
    <name>TTA Audio Files</name>
    <extension>tta</extension>
    <tag mode="prepend">ID3v2</tag>
  </format>
  <external>
    <command>codecs/cmdline/ttaenc.exe</command>
    <arguments>-e %OPTIONS %INFILE -o %OUTFILE</arguments>
    <mode>file</mode>
    <informat>wave</informat>
  </external>
</component>
