<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "http://www.bonkenc.org/boca/component.dtd">
<component>
  <name>WavPack Lossless Decompressor</name>
  <version>1.0</version>
  <id>wv-in</id>
  <type>decoder</type>
  <format>
    <name>WavPack Files</name>
    <extension>wv</extension>
  </format>
  <external>
    <command>codecs/cmdline/wvunpack.exe</command>
    <arguments>%OPTIONS %INFILE -</arguments>
    <mode>stdio</mode>
    <outformat>wave</outformat>
    <tag mode="append">APEv2</tag>
  </external>
</component>
