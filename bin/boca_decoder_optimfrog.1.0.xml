<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "http://www.bonkenc.org/boca/component.dtd">
<component>
  <name>OptimFROG Audio Decoder</name>
  <version>1.0</version>
  <id>ofr-in</id>
  <type>decoder</type>
  <format>
    <name>OptimFROG Files</name>
    <extension>ofr</extension>
  </format>
  <external>
    <command>codecs/cmdline/ofr.exe</command>
    <arguments>--decode %OPTIONS %INFILE --output -</arguments>
    <mode>stdio</mode>
    <outformat>wave</outformat>
    <tag mode="append">APEv2</tag>
  </external>
</component>
