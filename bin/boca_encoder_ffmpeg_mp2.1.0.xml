<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "http://www.bonkenc.org/boca/component.dtd">
<component>
  <name>MPEG-1 Audio Layer 2 Encoder</name>
  <version>1.0</version>
  <id>ffmpeg-mp2-out</id>
  <type>encoder</type>
  <format>
    <name>MPEG-1 Audio Layer 2</name>
    <extension>mp2</extension>
  </format>
  <external>
    <command>codecs/cmdline/ffmpeg.exe</command>
    <arguments>-f wav -i %INFILE -acodec mp2 %OPTIONS %OUTFILE</arguments>
    <mode>file</mode>
    <informat>wave</informat>
  </external>
</component>
