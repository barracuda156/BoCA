<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "http://www.bonkenc.org/boca/component.dtd">
<component>
  <name>Apple Lossless Encoder</name>
  <version>1.0</version>
  <id>ffmpeg-alac-out</id>
  <type>encoder</type>
  <format>
    <name>Apple Lossless Files</name>
    <extension>m4a</extension>
    <tag mode="other">MP4Metadata</tag>
  </format>
  <external>
    <command>codecs/cmdline/ffmpeg.exe</command>
    <arguments>-f wav -i %INFILE -acodec alac %OPTIONS %OUTFILE</arguments>
    <mode>file</mode>
    <informat>wave</informat>
  </external>
</component>
