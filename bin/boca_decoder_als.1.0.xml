<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "http://www.bonkenc.org/boca/component.dtd">
<component>
  <name>MPEG-4 Audio Lossless Decoder</name>
  <version>1.0</version>
  <id>als-in</id>
  <type>decoder</type>
  <format>
    <name>MPEG-4 ALS Files</name>
    <extension>mp4</extension>
    <tag id="mp4-tag" mode="other">MP4 Metadata</tag>
  </format>
  <format>
    <name>Raw ALS Files</name>
    <extension>als</extension>
  </format>
  <external>
    <command>codecs/cmdline/mp4als.exe</command>
    <arguments>-x %OPTIONS %INFILE %OUTFILE</arguments>
    <mode>file</mode>
    <outformat>wave</outformat>
  </external>
</component>
