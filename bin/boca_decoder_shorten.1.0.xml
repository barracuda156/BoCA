<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "http://www.bonkenc.org/boca/component.dtd">
<component>
  <name>Shorten Lossless Decoder</name>
  <version>1.0</version>
  <id>shn-in</id>
  <type>decoder</type>
  <format>
    <name>Shorten Audio</name>
    <extension>shn</extension>
  </format>
  <external>
    <command>codecs/cmdline/shorten.exe</command>
    <arguments>-x %OPTIONS %INFILE %OUTFILE</arguments>
    <mode>file</mode>
    <outformat>wave</outformat>
  </external>
</component>
