<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "http://www.bonkenc.org/boca/component.dtd">
<component>
  <name>Musepack Audio Decoder</name>
  <version>1.0</version>
  <id>mpc-in</id>
  <type>decoder</type>
  <format>
    <name>Musepack Audio Files</name>
    <extension>mpc</extension>
  </format>
  <external>
    <command>codecs/cmdline/mppdec.exe</command>
    <arguments>%OPTIONS %INFILE %OUTFILE</arguments>
    <mode>file</mode>
    <outformat>wave</outformat>
    <tag mode="append">APEv2</tag>
  </external>
</component>
