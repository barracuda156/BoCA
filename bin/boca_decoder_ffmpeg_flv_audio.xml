<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "http://www.bonkenc.org/boca/component.dtd">
<component>
  <name>Flash Video Audio Extractor</name>
  <version>1.0</version>
  <id>ffmpeg-flv_audio-in</id>
  <type>decoder</type>
  <format>
    <name>Flash Video Files</name>
    <extension>flv</extension>
    <extension>f4v</extension>
  </format>
  <external>
    <command>codecs/cmdline/ffmpeg.exe</command>
    <arguments>-i %INFILE -vn %OPTIONS -f wav -</arguments>
    <mode>stdio</mode>
    <outformat>wave</outformat>
  </external>
</component>
