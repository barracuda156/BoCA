<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "http://www.bonkenc.org/boca/component.dtd">
<component>
  <name>Tom's Audiokompressor</name>
  <version>1.0</version>
  <id>tak-in</id>
  <type>decoder</type>
  <format>
    <name>Tom's Audio</name>
    <extension>tak</extension>
    <tag id="apev2-tag" mode="append">APEv2</tag>
  </format>
  <external>
    <command ignoreExitCode="true">codecs/cmdline/takc.exe</command>
    <arguments>-d %OPTIONS %INFILE -</arguments>
    <mode>stdio</mode>
    <outformat>wave</outformat>
  </external>
</component>
