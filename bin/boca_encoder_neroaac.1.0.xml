<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "http://www.bonkenc.org/boca/component.dtd">
<component>
  <name>Nero AAC Encoder</name>
  <version>1.0</version>
  <id>nero-out</id>
  <type>encoder</type>
  <format>
    <name>MP4 Audio Files</name>
    <extension>m4a</extension>
  </format>
  <external>
    <command>codecs/cmdline/neroAacEnc.exe</command>
    <arguments>-ignorelength -if - -of %OUTFILE %OPTIONS</arguments>
    <mode>stdio</mode>
    <informat>wave</informat>
    <tag mode="other">MP4Meta</tag>
    <parameters>
      <switch name="Enable two-pass encoding" argument="-2pass"/>
      <selection name="Encoding mode" argument="%VALUE">
	<option alias="Auto"/>
	<option alias="LC AAC">-lc</option>
	<option alias="HE AAC">-he</option>
	<option alias="HEv2 AAC">-hev2</option>
      </selection>
    </parameters>
  </external>
</component>
